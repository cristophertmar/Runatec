
@{
    ViewBag.Title = "Registro - GestionContenidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!DOCTYPE html>
<html>
<head>   
    

    @*<link href="~/Content/jquery-ui.css" rel="stylesheet" />*@
    <link href="~/Content/Mantenimiento/GestionContenidos_Registro.css?v=@ViewData["qversion"]" rel="stylesheet" /> 
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/Mantenimiento/GestionContenidos_Registro.js?v=@ViewData["qversion"]"></script>     
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>

</head>
<body>
    <div>
        <input id="version_v" value=@ViewData["qversion"] style="display:none">
    </div>
    <div>
        <table style="width:100%">
            <tr>
                <td>
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td>
                    <table>
                        <tr>
                            <td colspan="2" id="campo_imagen" class="centrar"></td>
                        </tr>
                        <tr>
                            <td colspan="2" class="centrar">
                                <label id="labelfile" for="txt_imagen" class="labelfile"><i class="fas fa-upload"></i> Elige una imagen</label>
                                <input style="display:none" id="txt_imagen" class="file" type="file" accept="image/*" />

                            </td>
                        </tr>
                    </table>
                </td>
                <td>
                    <table>
                        <tr style="display:none;"><td colspan="2"><input id="txt_idgestioncontenido" /></td></tr>

                        <tr>
                            <td class="etiqueta">Menu:</td>
                            <td class="etiqueta">Sub Menu:</td>                           
                        </tr>
                        <tr>
                            <td>
                                <select class="combo" id="select_MenuPublicoPadreGestCont"></select>
                            </td>
                            <td>
                                <select class="combo" id="select_MenuPublicoHijoGestCont"></select>
                            </td>
                           
                        </tr>

                        <tr>
                            <td style="display:none;" id="nidgestioncontenido"></td>
                            <td style="display:none;" id="nidModulo"></td>
                            <td colspan="2" class="etiqueta">Título:</td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <input type="text" id="txt_titulo" maxlength="120" />
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" class="etiqueta">Descripción:</td>
                        </tr>
                        <tr>
                            <td colspan="2"><textarea id="txt_descripcion"></textarea></td>
                        </tr>  
                        <tr>
                            <td colspan="2" class="etiqueta">Estado:</td>
                        </tr>                   
                        <tr>
                            <td>
                                <select class="combo" id="select_estado">
                                    <option value="">--SELECCIONAR--</option>
                                    <option value="0">INACTIVO</option>
                                    <option selected="selected" value="1">ACTIVO</option>
                                </select>
                            </td>
                            <td>
                                <table style="margin:auto">
                                    <tr>
                                        <td>
                                            <input type="button" class="boton" id="btnGrabar" value="Grabar" />
                                        </td>
                                        <td>
                                            <input id="btnRetornar" type="button" class="boton" value="Cancelar" />
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

           
            <tr>
                <td colspan="2">
                    <div id="editartext" class="click2edit"></div>
                </td>
            </tr>
        </table>
        
        
    </div>
    <div>
      
    </div>
</body>

</html>