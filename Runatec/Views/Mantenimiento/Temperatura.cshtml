
@{
    ViewBag.Title = "Temperatura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/Mantenimiento/Clima.css?v=@ViewData["qversion"]" rel="stylesheet" />
</head>
<body>
    <div>
        <input id="version_v" value=@ViewData["qversion"] style="display:none">
    </div>
    <div class="div_inputs">
        <div>
            <label>Fecha Inicio:</label>
        </div>
        <div>
            <input type="date" id="txt_dfechainicio"/>
        </div>
        <div>
            <label>Fecha Fin:</label>
        </div>
        <div>
            <input type="date" id="txt_dfechafin"/>
        </div>
        <div><button id="btn_buscar" class="boton">Buscar</button></div>
    </div>
    
    <div style="margin:20px 0 0 38px;">
        <button id="AgregarTemperatura" class="boton"><i style="padding-right:3px; width:8px;" class="fas fa-plus"></i>Agregar</button>
        <button id="AgregarBandas" class="boton"><i style="padding-right:3px; width:8px;" class="far fa-edit"></i>Editar Temporadas</button>
    </div>
    <table class="tabla_carga" style="margin-top:5px;">
        <thead>
            <tr>
                <td>Fecha</td>
                <td>Temperatura Mínima</td>
                <td>Temperatura Máxima</td>
                <td>Promedio Mínimo</td>
                <td>Promedio Máximo</td>
                <td colspan="3"></td>
            </tr>
        </thead>
        <tbody id="tbody_listar"></tbody>
    </table>
    <div id="div_paginacion"></div>

    @*popup Bandas de Temperatura*@
    <div id="fondoPopup" class="fondo">&nbsp;</div>
    <div id="PopupBandas" class="ventana" style="overflow:hidden">
        <div id="PopupBandasdivheader" style="width:100%;">
            <table style="width:100% ; border-spacing:0px 0px; ">
                <tr style="background:rgb(25,165,25);" onmouseover="this.style.cursor='move'">
                    <td style="width:100%; height:40px; text-align:center;">
                        &nbsp;&nbsp;
                        <span id="tituloPopup">&nbsp;</span>&nbsp;&nbsp;
                    </td>
                    <td id="CerrarPopupBandas" onclick="CerrarPopupBandas();">
                        <span><i class="far fa-window-close iconocerrar"></i></span>
                    </td>
                </tr>
            </table>
        </div>
        <div>
            <table style="margin:auto; margin-top:10px;">
                <tr>
                    <td></td>
                    <td style="text-align:center; padding-bottom:5px;">Mínimo</td>
                    <td style="text-align:center;padding-bottom:5px;">Máximo</td>
                </tr>
                <tr>
                    <td>Límites-Fresco:</td>
                    <td><input type="date" id="txt_fechafriomin" /></td>
                    <td><input type="date" id="txt_fechafriomax" /></td>
                </tr>
                <tr><td height="7"></td></tr>
                <tr>
                    <td>Límites-Caliente:</td>
                    <td><input type="date" id="txt_fechacalientemin" /></td>
                    <td><input type="date" id="txt_fechacalientemax" /></td>
                </tr>
                <tr>
                    <td colspan="3" style="text-align:center;"><button style="margin-top:10px;" class="boton" id="btn_registrarbandas">Guardar</button></td>
                </tr>
            </table>
            <table class="tabla_carga">
                <thead>
                    <tr>
                        <td width="100">Fecha</td>
                        <td>Temperatura Mínima</td>
                        <td>Temperatura Máxima</td>
                        <td>Promedio Mínimo</td>
                        <td>Promedio Máximo</td>
                    </tr>
                </thead>
                <tbody id="popup_tbody_listar"></tbody>
            </table>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/Mantenimiento/Clima/Temperatura.js?v=@ViewData["qversion"]"></script>
</body>
</html>

