            <!-- <img class="main-iconos__arrow " src="assets/img/iconos/flecha_abajo.svg"> -->
        </div>
        <div class="main-iconos__iconos" style="box-shadow: 0 14px 28px rgba(0, 0, 0, 0.25), 0 10px 10px rgba(0, 0, 0, 0.22);">
            <img class="main-iconos__img " src="assets/img/iconos/icon_oportunidades.svg">
            <span class="main-iconos__texto">Oportunidades</span>
            <!-- <img class="main-iconos__arrow " src="assets/img/iconos/flecha_abajo.svg"> -->
        </div>
        <div class="main-iconos__iconos">
            <img class="main-iconos__img " src="assets/img/iconos/icon_costos.svg">
            <span class="main-iconos__texto">Costos de insumos/equipos</span>
            <!-- <img class="main-iconos__arrow " src="assets/img/iconos/flecha_abajo.svg"> -->
        </div>
        <div class="main-iconos__iconos">
            <img class="main-iconos__img " src="assets/img/iconos/icon_mesaayuda.svg">
            <span class="main-iconos__texto">Mesa de ayuda</span>
            <!-- <img class="main-iconos__arrow " src="assets/img/iconos/flecha_abajo.svg"> -->
